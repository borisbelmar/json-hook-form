{
  "name": "@borisbelmar/json-hook-form",
  "version": "0.1.0",
  "description": "Generate a react hook form from a json schema",
  "scripts": {
    "build": "tsup ./src/index.ts --format esm,cjs --dts --minify --external react",
    "watch": "tsup ./src/index.ts --format esm,cjs --dts --minify --external react --watch",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts}' --quiet --fix",
    "clean": "rm -rf node_modules && rm -rf dist",
    "test": "jest",
    "ci": "yarn --freeze-lockfile",
    "prepublishOnly": "yarn build",
    "prepare": "husky install"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "author": "Boris Belmar <borisbelmarm@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@borisbelmar/yup-schema-generator": "1.0.1",
    "clsx": "1.2.1"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17 || ^18",
    "react-hook-form": "^7"
  },
  "devDependencies": {
    "@hookform/resolvers": "3.0.1",
    "@types/jest": "29.2.3",
    "@types/node": "18.11.11",
    "@types/react": "18.0.33",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "5.45.0",
    "@typescript-eslint/parser": "5.45.0",
    "eslint": "8.28.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-import-resolver-typescript": "3.5.5",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "8.0.2",
    "jest": "29.5.0",
    "react": "18.2.0",
    "react-hook-form": "7.43.9",
    "ts-jest": "29.0.3",
    "tsup": "6.5.0",
    "typescript": "4.9.3"
  }
}
